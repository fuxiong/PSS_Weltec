@model PSS_Weltec.Models.User
@using PSS_Weltec.DAL

@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>Create a new account!</h1>
</hgroup>
<section id="loginForm">
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend></legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.user_Name_Model)
                @Html.TextBoxFor(m => m.user_Name_Model)
                @Html.ValidationMessageFor(m => m.user_Name_Model)
            </li>
            <li>
                @Html.LabelFor(m=>m.user_Trimester_Model)
                @Html.DropDownList("user_Trimester_Id", (IEnumerable<SelectListItem>)ViewData["listTrimester"], new { style = "width:260px;height:30px;" })
            </li>
            <li>
                @Html.LabelFor(m => m.user_Password_Model)
                @Html.PasswordFor(m => m.user_Password_Model)
                @Html.ValidationMessageFor(m => m.user_Password_Model)
            </li>
            <li>
               @Html.LabelFor(m => m.user_confire_Password_Model)
               @Html.PasswordFor(m => m.user_confire_Password_Model)
            </li>
        </ol>
        <input type="submit" value="Register" onclick="Save()"/>
    </fieldset>
}
</section>

